public class Main {
    public static void main(String[] args) {
        /*С помощью односвязного списка напишите реализацию LinkedList.
                У пользователя должны быть доступны методы добавления элемента, получения элемента и удаления элемента из списк.
        Условия:
        - Нельзя использовать шаблоны(готовый LinkedList, методы для работы с ним)*/
        class List<T> {
            public T data;
            public List<T> next;

            public List(T data) {
                this.data = data;
            }
        }

        class LinkedList<T> {
            private List<T> head;

            public LinkedList() {
                head = null;
            }

            public void addElement(T data) {
                List<T> newList = new List<>(data);
                newList.next = head;
                head = newList;
            }

            public T getElement(int index) {
                List<T> current = head;
                int count = 0;
                while (current != null) {
                    if (count == index) {
                        return current.data;
                    }
                    count++;
                    current = current.next;
                }
                return null;
            }

            public void deleteElement(T data) {
                List<T> current = head;
                List<T> prev = null;

                while (current != null) {
                    if (current.data.equals(data)) {
                        if (prev == null) {
                            head = current.next;
                        } else {
                            prev.next = current.next;
                        }
                        return;
                    }
                    prev = current;
                    current = current.next;
                }
            }
        }
    }
}
